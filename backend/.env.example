# Snake Game Backend Configuration

# Server port
PORT=3002

# Pinkhat backend URL
PINKHAT_SERVER_URL=http://YOUR-PINKHAT-BACKEND

# Admin API key for pinkhat backend (required for game submissions)
# This should match the ADMIN_API_KEY in the pinkhat server's configuration
PINKHAT_ADMIN_KEY=YOUR-ADMIN-KEY

# Enable/disable automatic reward distribution
REWARD_AUTO_DISTRIBUTE=true

# Cron schedule (minute hour day month weekday)
# Examples:
#   */15 * * * *  = Every 15 minutes (for testing)
#   0 */6 * * *   = Every 6 hours (default)
#   0 0 * * *     = Daily at midnight
#   0 0 * * 0     = Weekly on Sunday at midnight
REWARD_CRON_SCHEDULE=0 */6 * * *

# Number of top players to reward
# Default: 10 (rewards: 1.0, 0.9, 0.8, 0.7, 0.6, 0.5, 0.4, 0.3, 0.2, 0.1 ETH)
REWARD_TOP_COUNT=10